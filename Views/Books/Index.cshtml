@model bookstore.ViewModels.BooksViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1 class="title">Books</h1>
</div>
<div class="container-books">
    <table>
        <thead>
            <tr>
                <td>
                    <h4>Id</h4>
                </td>
                <td>
                    <h4>Title</h4>
                </td>
                <td>
                    <h4>Description</h4>
                </td>
                <td>
                    <h4>PublicationYear</h4>
                </td>
                <td>
                    <h4>Autor First Name</h4>
                </td>
                <td>
                    <h4>Autor Id</h4>
                </td>
                <td>
                    <h4>CreatedAt</h4>
                </td>
                <td>
                    <h4>UpdatedAt</h4>
                </td>
                <td>
                    <h4>Delete</h4>
                </td>
@*                 <td>
                    <h4>Update</h4>
                </td> *@
            </tr>
        </thead>
        <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>@book.Description</td>
                        <td>@book.PublicationYear</td>
                        <td>@(book.Autor != null ? book.Autor.FirstName: "Unknow" )</td>
                        <td>@(book.Autor != null ? book.Autor.Id: "Unknow" )</td>
                        <td>@book.CreatedAt</td>
                        <td>@book.UpdatedAt</td>
                        <td>
                            <form method="post">
                                <button type="submit" class="btn-delete" asp-page-handler="delete" asp-route-id="@book.Id">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path fill="currentColor"
                                            d="M7 21q-.825 0-1.412-.587T5 19V6H4V4h5V3h6v1h5v2h-1v13q0 .825-.587 1.413T17 21zM17 6H7v13h10zM9 17h2V8H9zm4 0h2V8h-2zM7 6v13z" />
                                    </svg>
                                </button>
                            </form>
                        </td>
@*                         <td>
                            <button class="btn-edit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                    <path fill="currentColor"
                                        d="M5 19h1.425L16.2 9.225L14.775 7.8L5 17.575zm-1 2q-.425 0-.712-.288T3 20v-2.425q0-.4.15-.763t.425-.637L16.2 3.575q.3-.275.663-.425t.762-.15t.775.15t.65.45L20.425 5q.3.275.437.65T21 6.4q0 .4-.138.763t-.437.662l-12.6 12.6q-.275.275-.638.425t-.762.15zM19 6.4L17.6 5zm-3.525 2.125l-.7-.725L16.2 9.225z" />
                                </svg>
                            </button>
                        </td> *@
                    </tr>
                }
        

        </tbody>
    </table>

    <div class="forms">
 
        <form method="post" class="form-crud"  asp-action="AddBook">
            <h2>Add book</h2>
            <label asp-for="Book.Title">Title</label>
            <input type="text" asp-for="Book.Title" class="form-input" required />

            <label asp-for="Book.Description">Description</label>
            <input type="text" asp-for="Book.Description" class="form-input" />

            <label asp-for="Book.PublicationYear">Publication Year</label>
            <input type="number" asp-for="Book.PublicationYear" class="form-input" min="0" max="9999" />

            <label asp-for="Book.AutorId">Author Id</label>
            <input type="number" asp-for="Book.AutorId" class="form-input" required />
            <input type="submit" class="btn-add" value="Add" />
        </form>
